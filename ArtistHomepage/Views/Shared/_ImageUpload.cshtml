@using Newtonsoft.Json;
@model ArtworkDraftContent

<div class="p-4 rounded border">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="mt-3 row">
        <label asp-for="NewImage"></label>
    </div>
    <div class="mt-3 row">
        <input asp-for="NewImage" class="form-control" type="file" />
        <span asp-validation-for="NewImage" class="text-danger mt-1"></span>
    </div>

    <div class="mt-3 row">
        <label asp-for="NewImageAltText"></label>
    </div>
    <div class="mt-3 row">
        <input asp-for="NewImageAltText" class="form-control" />
        <span asp-validation-for="NewImageAltText" class="text-danger mt-1"></span>
    </div>

    <div class="mt-3 row">
        <label asp-for="NewImageTags"></label>
    </div>
    <div class="mt-3 row">
        <input asp-for="NewImageTags" class="form-control" />
        <span asp-validation-for="NewImageTags" class="text-danger mt-1"></span>
    </div>
</div>
